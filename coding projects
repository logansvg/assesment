<body>

  <header>
    <h1>Workout & Basketball Training Planner</h1>
  </header>

  <main>
    <!-- Workout Card -->
    <div class="card">
      <h2>Workout Schedule</h2>
      <label for="day">Day</label>
      <select id="day">
        <option>Monday</option>
        <option>Tuesday</option>
        <option>Wednesday</option>
        <option>Thursday</option>
        <option>Friday</option>
        <option>Saturday</option>
        <option>Sunday</option>
      </select>

      <label for="start-time-workout">Start Time</label>
      <input type="time" id="start-time-workout">

      <label for="end-time-workout">End Time</label>
      <input type="time" id="end-time-workout">

      <label for="workout">Workout Details</label>
      <textarea id="workout" placeholder="e.g., Chest press, squats, cardio..."></textarea>

      <button onclick="saveWorkout()">Save Workout</button>
    </div>

    <!-- Basketball Card -->
    <div class="card">
      <h2>Basketball Training</h2>

      <label for="drills">Skill Focus</label>
      <select id="drills">
        <option>Shooting</option>
        <option>Dribbling</option>
        <option>Defense</option>
        <option>Conditioning</option>
        <option>Game Play</option>
      </select>

      <label for="start-time-basketball">Start Time</label>
      <input type="time" id="start-time-basketball">

      <label for="end-time-basketball">End Time</label>
      <input type="time" id="end-time-basketball">

      <label for="basketball-notes">Training Notes</label>
      <textarea id="basketball-notes" placeholder="e.g., 30 mins shooting drills, 1-on-1 defense..."></textarea>

      <button onclick="saveBasketball()">Save Training</button>
    </div>
  </main>

  <section class="summary" id="summary">
    <h2>Today's Schedule</h2>
    <div id="output"></div>
  </section>

  <script>
    function saveWorkout() {
      const day = document.getElementById('day').value;
      const start = document.getElementById('start-time-workout').value;
      const end = document.getElementById('end-time-workout').value;
      const workout = document.getElementById('workout').value;

      const output = document.getElementById('output');
      const workoutText = `
        <p><strong>${day} - Workout:</strong><br>
        ${start} to ${end}<br>
        ${workout}</p>
      `;
      output.innerHTML += workoutText;
    }

    function saveBasketball() {
      const drill = document.getElementById('drills').value;
      const start = document.getElementById('start-time-basketball').value;
      const end = document.getElementById('end-time-basketball').value;
      const notes = document.getElementById('basketball-notes').value;

      const output = document.getElementById('output');
      const basketballText = `
        <p><strong>Basketball Training - ${drill}:</strong><br>
        ${start} to ${end}<br>
        ${notes}</p>
      `;
      output.innerHTML += basketballText;
    }
  </script>

</body>
